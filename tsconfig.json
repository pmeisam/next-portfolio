{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "lib/*": ["lib/*"],
      "theme/*": ["theme/*"],
      "utils/*": ["utils/*"],
      "constants/*": ["constants/*"],
      "context/*": ["context/*"],
      "components/*": ["components/*"],
      "types/*": ["types/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "theme/media.js",
    ".next/types/**/*.ts",
    "lib/api/contentful.ts"
  ],
  "exclude": ["node_modules"]
}
